<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Şirket Onayı</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .btn-success {
            background-color: #28a745;
            border-color: #28a745;
        }

            .btn-success:hover {
                background-color: #218838;
                border-color: #1e7e34;
            }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

            .btn-danger:hover {
                background-color: #c82333;
                border-color: #bd2130;
            }

        .btn-info {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

            .btn-info:hover {
                background-color: #138496;
                border-color: #117a8b;
            }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Şirket Onayı</h2>

        <!-- Onay Bekleyen Şirketler Listesi -->
        <div class="table-responsive">
            <table class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Şirket Adı</th>
                        <th>Email</th>
                        <th>Başvuru Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Örnek Şirketler -->
                    <tr>
                        <td>1</td>
                        <td>ABC Ltd.</td>
                        <td>info@abcltd.com</td>
                        <td>2024-08-20</td>
                        <td>Onay Bekliyor</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="approveCompany(1)">Onayla</button>
                            <button class="btn btn-danger btn-sm" onclick="rejectCompany(1)">Reddet</button>
                        </td>
                    </tr>
                    <tr>
                        <td>2</td>
                        <td>XYZ A.Ş.</td>
                        <td>contact@xyz.com</td>
                        <td>2024-08-22</td>
                        <td>Onay Bekliyor</td>
                        <td>
                            <button class="btn btn-success btn-sm" onclick="approveCompany(2)">Onayla</button>
                            <button class="btn btn-danger btn-sm" onclick="rejectCompany(2)">Reddet</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Geri Dön Butonu -->
        <div class="d-flex justify-content-end mt-4">
            <button class="btn btn-info" onclick="goBack()">Geri Dön</button>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Script for Company Approval -->
    <script>
        function approveCompany(companyId) {
            // Şirket onaylama işlemleri burada yapılabilir.
            alert("Şirket ID " + companyId + " onaylandı.");
            // Onaylama işlemi tamamlandıktan sonra tabloyu güncelleyebilirsiniz.
        }

        function rejectCompany(companyId) {
            // Şirket reddetme işlemleri burada yapılabilir.
            alert("Şirket ID " + companyId + " reddedildi.");
            // Reddetme işlemi tamamlandıktan sonra tabloyu güncelleyebilirsiniz.
        }

        function goBack() {
            // Geri dönme işlemi için yönlendirme
            window.location.href = '/Admin/Admin/Index';
        }
    </script>
</body>

</html>
