<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Raporlama</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.18.5/xlsx.full.min.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
        }

        .container {
            background-color: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .table thead th {
            background-color: #007bff;
            color: white;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2 class="mb-4 text-center">Raporlama</h2>

        <!-- Rapor Türü Seçimi -->
        <div class="mb-4">
            <label for="reportType" class="form-label">Rapor Türü Seçin:</label>
            <select class="form-select" id="reportType">
                <option value="user">Kullanıcı Raporu</option>
                <option value="sales">Satış Raporu</option>
                <option value="activity">Aktivite Raporu</option>
            </select>
        </div>

        <!-- Filtreleme Seçenekleri -->
        <div class="row mb-4">
            <div class="col-md-4">
                <label for="startDate" class="form-label">Başlangıç Tarihi:</label>
                <input type="date" class="form-control" id="startDate">
            </div>
            <div class="col-md-4">
                <label for="endDate" class="form-label">Bitiş Tarihi:</label>
                <input type="date" class="form-control" id="endDate">
            </div>
            <div class="col-md-4 d-flex align-items-end">
                <button class="btn btn-primary w-100" onclick="generateReport()">Raporu Göster</button>
            </div>
        </div>

        <!-- Rapor Sonuçları -->
        <div id="reportResults">
            <h5 class="mb-3">Rapor Sonuçları</h5>
            <div class="table-responsive">
                <table class="table table-bordered table-hover" id="reportTable">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Detay</th>
                            <th>Tarih</th>
                            <th>Miktar</th>
                        </tr>
                    </thead>
                    <tbody>
                        <!-- Örnek Veriler -->
                        <tr>
                            <td>1</td>
                            <td>Kullanıcı Girişi</td>
                            <td>2024-08-25</td>
                            <td>5</td>
                        </tr>
                        <tr>
                            <td>2</td>
                            <td>Satış Tamamlandı</td>
                            <td>2024-08-24</td>
                            <td>2000 TL</td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="d-flex justify-content-between mt-3">
                <button class="btn btn-success" onclick="exportToExcel()">Excel'e Aktar</button>
                <button class="btn btn-secondary" onclick="goBack()">Geri Dön</button>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <!-- Custom Script for Report Generation, Excel Export, and Navigation -->
    <script>
        function generateReport() {
            // Burada rapor oluşturma işlemleri yapılabilir.
            // Filtrelere ve seçilen rapor türüne göre rapor sonuçlarını güncelleyin.
            alert("Rapor oluşturuluyor...");
        }

        function exportToExcel() {
            // Get the table data
            var table = document.getElementById('reportTable');
            var wb = XLSX.utils.table_to_book(table, { sheet: "Sheet JS" });

            // Export to Excel
            XLSX.writeFile(wb, 'rapor.xlsx');
        }

        function goBack() {
            // Redirect to the specified action in ASP.NET Core
            window.location.href = '/Admin/Admin/Index'; // This URL should match the route you are using in your application
        }
    </script>
</body>

</html>
