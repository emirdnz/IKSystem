<h4>Yeni İzin Başvurusu</h4>
<form asp-action="SubmitLeaveRequest" method="post">
    <div class="form-group">
        <label for="LeaveType">İzin Türü</label>
        <select class="form-control" id="LeaveType" name="LeaveType">
            <option value="Yıllık İzin">Yıllık İzin</option>
            <option value="Hastalık İzni">Hastalık İzni</option>
            <!-- Diğer izin türleri -->
        </select>
    </div>

    <div class="form-group">
        <label for="StartDate">Başlangıç Tarihi</label>
        <input type="date" class="form-control" id="StartDate" name="StartDate" />
    </div>

    <div class="form-group">
        <label for="EndDate">Bitiş Tarihi</label>
        <input type="date" class="form-control" id="EndDate" name="EndDate" />
    </div>

    <button type="submit" class="btn btn-primary">Başvur</button>
</form>
